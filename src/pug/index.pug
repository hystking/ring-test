extend base

block append meta
  //- Meta Infomations
  title= meta.title
  meta(name="description", content=meta.description)
  meta(name="keywords", content=meta.keywords)

  //- Facebook OGP
  meta(name="og:title", content=meta.title)
  meta(name="og:description", content=meta.description)
  meta(name="og:type", content="website")
  meta(name="og:url", content=meta.indexUrl)
  meta(name="og:image", content=meta.ogImage)
  meta(name="og:site_name", content=meta.title)

  //- Twitter Card
  meta(name="twitter:card", content="summary_large_image")
  meta(name="twitter:title", content=meta.title)
  meta(name="twitter:description", content=meta.description)
  meta(name="twitter:image:src", content=meta.ogImage)

block content
  canvas#view.view
  .ui
    .ui__element
      label(for="radiusSlider") 半径
      input#radiusSlider(type="range")
    .ui__element
      label(for="widthSlider") 幅
      input#widthSlider(type="range")
    .ui__element
      label(for="platinumRadio") Platinum
      input#platinumRadio(type="radio" name="material" value="platinum" checked)
      label(for="goldRadio") Gold
      input#goldRadio(type="radio" name="material" value="gold")
      label(for="redGoldRadio") Red Gold
      input#redGoldRadio(type="radio" name="material" value="red_gold")
    .ui__element
      label(for="embossText") 刻印
      input#embossText(type="text" value="Emboss")
